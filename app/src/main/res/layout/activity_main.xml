<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_login_background"
    tools:context=".MainActivity">
    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="420dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="30dp"
        android:background="@drawable/login_screen">
       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               android:layout_marginTop="20dp"
               android:layout_marginStart="10dp"
               android:layout_marginEnd="10dp">

               <Button
                   android:id="@+id/login_selection_button"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:background="@drawable/buttons_selected"
                   android:text="log in"

                   />

               <Button
                   android:id="@+id/signUp_selection_button"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:background="@drawable/login_buttons"
                   android:text="Sign Up" />
           </LinearLayout>

           <fragment
               android:id="@+id/fragment2"
               android:name="androidx.navigation.fragment.NavHostFragment"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:defaultNavHost="true"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintVertical_bias="0"
               app:navGraph="@navigation/nav_graph">

           </fragment>
           <Button
               android:id="@+id/mainActivity_logIn_btn"
               android:layout_width="120dp"
               android:layout_height="wrap_content"
               android:layout_marginEnd="7dp"
               android:layout_marginRight="7dp"
               android:background="@drawable/login_buttons"
               android:backgroundTint="@color/colorPrimaryDark"
               android:text="log in "
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toBottomOf="@id/fragment2"
               android:layout_marginTop="10dp"
               android:textColor="#ffff"
               android:textSize="15sp"
               />
           <TextView
               android:id="@+id/mainActivity_OR_text"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="OR"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toBottomOf="@id/mainActivity_logIn_btn"
               android:textSize="15sp"
               android:layout_marginTop="5dp"
               app:layout_constraintVertical_bias="0"
               />
           <ImageView
               android:id="@+id/mainActivity_google_icon"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:src="@drawable/_x31__stroke"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@id/mainActivity_OR_text"
               android:layout_marginStart="70dp"
               />

           <ImageView
               android:id="@+id/mainActivity_faceBook_icon"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:layout_marginStart="90dp"
               android:src="@drawable/facebook_icon"
               app:layout_constraintStart_toEndOf="@id/mainActivity_google_icon"
               app:layout_constraintTop_toBottomOf="@id/mainActivity_OR_text" />

       </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>








</androidx.constraintlayout.widget.ConstraintLayout>