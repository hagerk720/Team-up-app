<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp">

    <TextView
        android:id="@+id/navigation_profile_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/profile_photo"
        android:gravity="center"
        android:textSize="25dp"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <View
        android:id="@+id/viewSupporter"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="@id/navigation_profile_image"
        app:layout_constraintStart_toStartOf="@id/navigation_profile_image"
        app:layout_constraintBottom_toBottomOf="@id/navigation_profile_image"
        app:layout_constraintEnd_toEndOf="@id/navigation_profile_image"/>
    <TextView
        android:id="@+id/navigation_userName_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@id/viewSupporter"
        app:layout_constraintStart_toEndOf="@id/navigation_profile_image"
        />
</androidx.constraintlayout.widget.ConstraintLayout>